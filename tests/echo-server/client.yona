let
  _ -| port -| _ = System::args

    keep_reading = \b -> if b == (ord 'o') then false else true  # end on 'o'
in

with socket\Client::connect "127.0.0.1" (int port) as connection
    do
        socket\Connection::write connection "hello"
        resp = Seq::decode <| socket\Connection::read_until connection keep_reading
    end
end
